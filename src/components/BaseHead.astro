---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { SITE_NAME, SITE_URL, TWITTER_SITE, TWITTER_CREATOR } from '../config';

export interface Props {
	title: string;
	description: string;
	image?: string;
	ogType?: string;
	siteName?: string;
	articlePublishedTime?: string;
	articleModifiedTime?: string;
	articleAuthor?: string;
	twitterSite?: string;
	twitterCreator?: string;
	relPrev?: string;
	relNext?: string;
}

const {
	title,
	description,
	image = '/social_img.webp',
	ogType = 'website',
	siteName = SITE_NAME,
	articlePublishedTime,
	articleModifiedTime,
	articleAuthor,
	twitterSite = TWITTER_SITE,
	twitterCreator = TWITTER_CREATOR,
	relPrev,
	relNext,
} = Astro.props;
const fullImageUrl = new URL(image, Astro.url).href;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<link rel="canonical" href={Astro.url} />
{relPrev && <link rel="prev" href={relPrev} />}
{relNext && <link rel="next" href={relNext} />}
<meta name="robots" content="index,follow" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content={siteName} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
{ogType === 'article' && articlePublishedTime && <meta property="og:article:published_time" content={articlePublishedTime} />}
{ogType === 'article' && articleModifiedTime && <meta property="og:article:modified_time" content={articleModifiedTime} />}
{ogType === 'article' && articleAuthor && <meta property="og:article:author" content={articleAuthor} />}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:site" content={twitterSite} />
<meta property="twitter:creator" content={twitterCreator} />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl} />

<slot name="jsonld" />
